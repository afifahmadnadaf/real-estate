{
  "name": "search-indexer-worker",
  "version": "1.0.0",
  "description": "Background worker for indexing properties to Elasticsearch",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@real-estate/common": "workspace:*",
    "@real-estate/db-models": "workspace:*",
    "@real-estate/events": "workspace:*",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,json",
    "ignore": ["*.test.js"]
  },
  "keywords": ["worker", "search-indexer", "elasticsearch", "real-estate"],
  "author": "Real Estate Team",
  "license": "UNLICENSED"
}

