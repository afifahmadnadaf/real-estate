{
  "name": "billing-service",
  "version": "1.0.0",
  "description": "Billing and payment service for Real Estate Platform",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@real-estate/common": "workspace:*",
    "@real-estate/db-models": "workspace:*",
    "@real-estate/events": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "pdfkit": "^0.17.2",
    "pino": "^8.17.2",
    "razorpay": "^2.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "*.test.js"
    ]
  },
  "keywords": [
    "billing-service",
    "payments",
    "razorpay",
    "real-estate"
  ],
  "author": "Real Estate Team",
  "license": "UNLICENSED"
}
